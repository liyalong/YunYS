<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="@dimen/distance_55"
    android:layout_width="match_parent"
    android:background="@drawable/linearlayout_bottom_line"
    android:paddingHorizontal="@dimen/distance_10"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_49"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/knowledge_file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center|left"
            android:textColor="@color/color_333"
            android:textSize="@dimen/distance_14"
            />
        <TextView
            android:id="@+id/knowledge_file_create_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666"
            android:textSize="@dimen/distance_12"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/download"
        android:layout_width="@dimen/distance_100"
        android:layout_height="@dimen/distance_30"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/download"
        android:background="@color/color_green_main"/>
</LinearLayout>
