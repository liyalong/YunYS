    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_49"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_back" />

            <TextView
                android:id="@+id/banner_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/process_task_detail"
                android:textColor="@color/color_333" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_back"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_10"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_42"
                android:background="@drawable/linearlayout_bottom_line"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/distance_10"
                    android:layout_marginRight="@dimen/distance_5"
                    android:gravity="center"
                    android:src="@mipmap/icon_project_list_title_left" />

                <TextView
                    android:id="@+id/deviceinfo_sszb_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/deviceinfo_jbxx"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/distance_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/distance_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/distance_30"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/process_task_name"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/distance_12" />

                <TextView
                    android:id="@+id/process_task_name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/distance_30"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/distance_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/distance_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/distance_30"
                    android:layout_gravity="center|left"
                    android:gravity="center"
                    android:text="@string/process_task_user"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/distance_12" />

                <TextView
                    android:id="@+id/task_start_user"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/distance_30"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/distance_12" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/task_assign_lin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/distance_10"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/distance_30"
                    android:layout_gravity="center|left"
                    android:gravity="center"
                    android:text="@string/process_approval_user"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/distance_12" />

                <TextView
                    android:id="@+id/task_assign_user"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/distance_30"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/distance_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/distance_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/distance_30"
                    android:layout_gravity="center|left"
                    android:gravity="center"
                    android:text="@string/process_task_start"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/distance_12" />

                <TextView
                    android:id="@+id/task_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/distance_30"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/distance_12" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/distance_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/distance_30"
                    android:layout_gravity="center|left"
                    android:gravity="center"
                    android:text="@string/process_task_state"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/distance_12" />

                <TextView
                    android:id="@+id/task_start_state"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/distance_30"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/distance_12" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/approval_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_10"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_42"
                android:background="@drawable/linearlayout_bottom_line"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/distance_10"
                    android:layout_marginRight="@dimen/distance_5"
                    android:gravity="center"
                    android:src="@mipmap/icon_project_list_title_left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/process_approval_box"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/distance_14" />
            </LinearLayout>

            <ListView
                android:id="@+id/process_approval_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/distance_10">

            </ListView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/caozuo_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/distance_14"
            android:background="@color/white"
            android:paddingVertical="@dimen/distance_20">

            <TextView
                android:id="@+id/do_process_task"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/distance_100"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:drawableTop="@mipmap/icon_do_task"
                android:gravity="center"
                android:text="@string/process_task_do"
                android:textColor="@color/color_333"
                android:textSize="@dimen/distance_14"
                android:visibility="gone" />

            <TextView
                android:id="@+id/to_process_task_detail"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/distance_100"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:drawableTop="@mipmap/icon_task_child_list"
                android:gravity="center"
                android:text="@string/look_task_child"
                android:textColor="@color/color_333"
                android:textSize="@dimen/distance_14"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
