<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f4f4f4"
    tools:context="com.yunyisheng.app.yunys.main.activity.NoticeDeatilActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_49"
            android:background="@color/white">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/blackback" />

            <TextView
                android:id="@+id/te_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/noticedeatils"
                android:textColor="@color/color_333"
                android:textSize="@dimen/distance_16" />

            <ImageView
                android:id="@+id/te_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/distance_10"
                android:background="@mipmap/more" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_all"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/distance_10"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="visible"
            android:paddingRight="@dimen/distance_10"
            >
            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_40"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="@dimen/distance_4"
                    android:layout_height="@dimen/distance_15"
                    android:layout_marginLeft="@dimen/distance_13"
                    android:layout_marginTop="@dimen/distance_1"
                    android:background="@mipmap/titlehead" />

                <TextView
                    android:id="@+id/te_noticetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/distance_6"
                    android:layout_toRightOf="@+id/img"
                    android:textColor="@color/color_333"
                    android:singleLine="true"
                    android:maxLength="14"
                    android:textSize="@dimen/distance_14" />
                <TextView
                    android:id="@+id/te_noticetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_14" />
            </RelativeLayout>
            <TextView
                android:id="@+id/te_noticesender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666"
                android:textSize="@dimen/distance_14"
                android:layout_marginLeft="@dimen/distance_10"
                android:layout_below="@+id/rl"
                />
            <TextView
                android:id="@+id/te_noticedeatils"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_14"
                android:textColor="@color/color_666"
                android:textSize="@dimen/distance_14"
                android:layout_marginLeft="@dimen/distance_10"
                android:layout_below="@+id/te_noticesender"
                />
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_1"
                android:layout_below="@+id/te_noticedeatils"
                android:layout_marginTop="@dimen/distance_10"
                android:background="@color/color_e7"
                />
            <TextView
                android:id="@+id/te_fujina_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="附件"
                android:layout_marginTop="@dimen/distance_10"
                android:textColor="@color/color_666"
                android:textSize="@dimen/distance_14"
                android:layout_marginLeft="@dimen/distance_10"
                android:layout_below="@+id/view"
                />
            <ListView
                android:id="@+id/lv_fujianlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/te_fujina_type"
                android:layout_marginLeft="@dimen/distance_10"
                android:dividerHeight="@dimen/distance_1"
                android:divider="@color/color_f4f4f4"
                android:layout_marginTop="@dimen/distance_10"
                ></ListView>
        </RelativeLayout>
        <ImageView
            android:id="@+id/img_quesheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/distance_125"
            android:background="@mipmap/no_network"
            android:visibility="gone" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
