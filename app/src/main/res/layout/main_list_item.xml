<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/distance_79"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/distance_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/te_schedule_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333"
            android:textSize="@dimen/distance_14" />

        <TextView
            android:id="@+id/te_liucheng_type"
            android:layout_width="@dimen/distance_30"
            android:layout_height="@dimen/distance_14"
            android:layout_marginLeft="@dimen/distance_2"
            android:layout_marginTop="@dimen/distance_2"
            android:layout_toRightOf="@+id/te_schedule_title"
            android:background="@mipmap/liuchengbac"
            android:gravity="center"
            android:textSize="@dimen/distance_8" />

        <TextView
            android:id="@+id/te_schedule_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/distance_2"
            android:textColor="@color/color_999"
            android:textSize="@dimen/distance_11" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/te_schedule_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:textColor="@color/color_666"
            android:textSize="@dimen/distance_14" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/te_zhixing_peo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:textColor="@color/color_999"
            android:textSize="@dimen/distance_12" />
    </RelativeLayout>
</LinearLayout>