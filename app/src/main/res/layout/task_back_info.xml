<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="@dimen/distance_280"
            android:layout_height="@dimen/distance_120"
            android:layout_centerInParent="true"
            android:background="@drawable/dialog_radio_5dp">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/distance_10"
                android:text="请输入回退意见"
                android:textColor="@color/color_333"
                android:textSize="@dimen/distance_15" />

            <EditText
                android:id="@+id/task_back_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_marginLeft="@dimen/distance_10"
                android:layout_marginRight="@dimen/distance_10"
                android:layout_marginTop="@dimen/distance_15"
                android:background="@null"
                android:hint="请输入"
                android:textColor="@color/color_666"
                android:textColorHint="@color/color_666"
                android:textSize="@dimen/distance_13" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_1"
                android:layout_below="@+id/task_back_info"
                android:layout_marginTop="@dimen/distance_10"
                android:background="@color/color_e7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/view"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/back_task_close"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="取消"
                        android:textColor="@color/color_46a"
                        android:textSize="@dimen/distance_14" />
                </RelativeLayout>

                <View
                    android:layout_width="@dimen/distance_1"
                    android:layout_height="match_parent"
                    android:background="@color/color_e7" />

                <RelativeLayout
                    android:id="@+id/back_task_submit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="确定"
                        android:textColor="@color/color_46a"
                        android:textSize="@dimen/distance_14" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>