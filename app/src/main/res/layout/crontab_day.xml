<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/distance_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linearlayout_bottom_line">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/distance_48"
                android:text="@string/cron_select_left"
                android:gravity="center"
                android:textColor="@color/color_333"/>
            <EditText
                android:id="@+id/day_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:inputType="number"
                android:textColor="@color/color_333"
                android:textSize="@dimen/distance_12"
                android:gravity="center|right"
                android:background="@null"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/cron_day"
                android:textColor="@color/color_666"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_48"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/cron_select_2"
                android:textColor="@color/color_333"
                android:gravity="center|left"
                android:textSize="@dimen/distance_14"/>
            <TextView
                android:id="@+id/day_first_runtime"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="12:00"
                android:textColor="@color/color_666"
                android:textSize="@dimen/distance_14"
                android:gravity="center|right"
                android:background="@null"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_right"
                android:layout_marginLeft="@dimen/distance_10"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>