<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:orientation="vertical">
    <ImageView
        android:layout_width="110dp"
        android:layout_height="95dp"
        android:layout_gravity="center"
        android:layout_marginBottom="52dp"
        android:layout_marginTop="88dp"
        android:src="@mipmap/login_logo" />
    <LinearLayout
       style="@style/login_linearLayout_style">
        <ImageView
            style="@style/login_icon_style"
            android:background="@mipmap/login_icon_phone"/>
        <EditText
            android:id="@+id/et_account"
            style="@style/LoginInput"
            android:hint="@string/account"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/login_linearLayout_style">
        <ImageView
            style="@style/login_icon_style"
            android:background="@mipmap/login_icon_password"/>
        <EditText
            android:id="@+id/et_password"
            style="@style/LoginInput"
            android:inputType="textPassword"
            android:textColorHint="@color/white"
            android:hint="@string/password" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/yzm_layout"
        style="@style/login_linearLayout_style"
        android:orientation="horizontal"
        android:visibility="gone">
        <ImageView
            style="@style/login_icon_style"
            android:background="@mipmap/icon_message"/>
        <EditText
            android:id="@+id/yzm"
            style="@style/LoginInput"
            android:hint="@string/yzm"
            android:layout_width="match_parent"
            android:layout_weight="2"
            />
        <Button
            android:id="@+id/get_yzm"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:background="@drawable/yzm_bg"
            android:text="@string/get_yzm"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_login"
        style="@style/LoginInput.Button"
        android:text="@string/login"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_mini"
            android:textColor="@color/white"
            android:text="@string/zhuce"/>
        <TextView
            android:id="@+id/forgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_mini"
            android:textColor="@color/white"
            android:text="@string/forgetpassword"
            />
    </LinearLayout>

</LinearLayout>
