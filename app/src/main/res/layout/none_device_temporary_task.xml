<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseBackgroundColor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/distance_10"
            android:paddingHorizontal="@dimen/distance_10">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="50"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/color_333"
                android:hint="@string/task_name"
                android:textColorHint="@color/color_666"
                android:textSize="@dimen/distance_14"
                android:paddingVertical="@dimen/distance_18"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/distance_10"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/distance_10">
            <TextView
                android:layout_width="@dimen/distance_104"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:layout_gravity="center"
                android:text="@string/task_start_end_time"
                android:textColor="@color/color_333"
                android:textSize="@dimen/distance_14"
                android:layout_marginRight="@dimen/distance_10"/>
            <View
                android:layout_width="@dimen/distance_1"
                android:layout_height="@dimen/distance_84"
                android:background="@color/color_e7e7e7"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/task_start_time"
                        android:textColorHint="@color/color_666"
                        android:textSize="@dimen/distance_14"
                        android:textColor="@color/color_333"
                        android:gravity="center|right"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/icon_right"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/distance_10"/>
                    </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_1"
                    android:background="@color/color_e7e7e7"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:hint="@string/task_end_time"
                                android:textColorHint="@color/color_666"
                                android:textSize="@dimen/distance_14"
                                android:gravity="center|right"
                                android:textColor="@color/color_333"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@mipmap/icon_right"
                                android:layout_gravity="right"
                                android:layout_marginLeft="@dimen/distance_10"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="@dimen/distance_10"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/distance_10">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/task_status"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/distance_14"
                    android:paddingVertical="@dimen/distance_18"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="true"
                    android:thumb="@drawable/thumb"
                    android:track="@drawable/track"/>

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/distance_10"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/distance_10">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/task_desc"
                android:textColor="@color/color_333"
                android:textSize="@dimen/distance_14"
                android:paddingVertical="@dimen/distance_18"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_right"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/distance_10"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/distance_10">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/task_back_detail_form"
                android:textColor="@color/color_333"
                android:textSize="@dimen/distance_14"
                android:paddingVertical="@dimen/distance_18"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_right"/>
        </LinearLayout>
        </LinearLayout>

</android.support.constraint.ConstraintLayout>
