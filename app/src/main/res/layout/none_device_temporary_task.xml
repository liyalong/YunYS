<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseBackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/distance_10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/linearlayout_bottom_line">
                <TextView
                    android:id="@+id/select_project"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/distance_50"
                    android:layout_weight="1"
                    android:text="@string/select_project"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/distance_14"
                    android:gravity="center|left"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/icon_right"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_10"
            android:background="@color/white"
            android:paddingHorizontal="@dimen/distance_10">

            <EditText
                android:id="@+id/task_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_50"
                android:background="@null"
                android:ellipsize="end"
                android:hint="@string/task_name"
                android:maxLength="50"
                android:singleLine="true"
                android:textColor="@color/color_333"
                android:textColorHint="@color/color_666"
                android:textSize="@dimen/distance_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_10"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/distance_10">

            <TextView
                android:layout_width="@dimen/distance_104"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/distance_10"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="@string/task_start_end_time"
                android:textColor="@color/color_333"
                android:textSize="@dimen/distance_14" />

            <View
                android:layout_width="@dimen/distance_1"
                android:layout_height="@dimen/distance_84"
                android:background="@color/color_e7e7e7" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/task_start_time"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/distance_40"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:hint="@string/task_start_time"
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_666"
                        android:textSize="@dimen/distance_14" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/distance_10"
                        android:src="@mipmap/icon_right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_1"
                    android:background="@color/color_e7e7e7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/task_end_time"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/distance_40"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:hint="@string/task_end_time"
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_666"
                        android:textSize="@dimen/distance_14" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/distance_10"
                        android:src="@mipmap/icon_right" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_10"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/distance_10"
            android:paddingVertical="@dimen/distance_5">

            <EditText
                android:id="@+id/tasks_desc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_80"
                android:layout_weight="1"
                android:hint="@string/task_desc"
                android:textColor="@color/color_333"
                android:textColorHint="@color/color_666"
                android:textSize="@dimen/distance_14"
                android:gravity="top|left"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_50"
            android:background="@color/white"
            android:layout_marginTop="@dimen/distance_10"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/distance_10">
            <TextView
                android:id="@+id/select_assign_users"
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_50"
                android:layout_weight="1"
                android:text="@string/select_project_user_list"
                android:textColor="@color/color_333"
                android:textSize="@dimen/distance_14"
                android:gravity="center|left"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_right"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_10"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/distance_10">
            <TextView
                android:id="@+id/task_templates"
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_45"
                android:layout_weight="1"
                android:text="@string/task_back_detail_form"
                android:textColor="@color/color_333"
                android:textSize="@dimen/distance_14"
                android:gravity="center|left"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_right" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
