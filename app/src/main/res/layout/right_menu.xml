<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_40"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/distance_4"
                android:layout_height="@dimen/distance_15"
                android:layout_marginLeft="@dimen/distance_13"
                android:layout_marginTop="@dimen/distance_1"
                android:background="@mipmap/titlehead" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_6"
                android:layout_toRightOf="@+id/img"
                android:text="@string/clickdelete"
                android:textColor="@color/color_666"
                android:textSize="@dimen/distance_14" />
        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_todaycolumn"
            android:background="@color/color_e7" />

        <com.yunyisheng.app.yunys.utils.MyGridView
            android:id="@+id/gv_added"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:numColumns="2"></com.yunyisheng.app.yunys.utils.MyGridView>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_10"
            android:layout_below="@+id/rl_todaycolumn"
            android:background="@color/baseBackgroundColor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_40"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="@dimen/distance_4"
                android:layout_height="@dimen/distance_15"
                android:layout_marginLeft="@dimen/distance_13"
                android:layout_marginTop="@dimen/distance_1"
                android:background="@mipmap/titlehead" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_6"
                android:layout_toRightOf="@+id/img2"
                android:text="@string/canadd"
                android:textColor="@color/color_666"
                android:textSize="@dimen/distance_14" />
        </RelativeLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_todaycolumn"
            android:background="@color/color_e7" />

        <com.yunyisheng.app.yunys.utils.MyGridView
            android:id="@+id/gv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="2"></com.yunyisheng.app.yunys.utils.MyGridView>
    </LinearLayout>
</ScrollView>