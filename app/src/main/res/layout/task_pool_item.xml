<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/distance_10"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/distance_8">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/device_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务名称"
                    android:textColor="@color/color_333"
                    android:gravity="center"
                    android:textSize="@dimen/distance_14"/>
                <TextView
                    android:id="@+id/task_status"
                    android:layout_width="@dimen/distance_30"
                    android:layout_height="@dimen/distance_14"
                    android:background="@color/device_status_success"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="待认领"
                    android:paddingHorizontal="@dimen/distance_2"
                    android:textSize="@dimen/distance_8"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/distance_10"/>
                <TextView
                    android:id="@+id/task_status_istimeout"
                    android:layout_width="@dimen/distance_30"
                    android:layout_height="@dimen/distance_14"
                    android:background="@color/device_status_error"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/task_status_5"
                    android:paddingHorizontal="@dimen/distance_2"
                    android:textSize="@dimen/distance_8"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/distance_10"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/task_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2018-01-11 00:00:00"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=" 至 "
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_10"/>
                <TextView
                    android:id="@+id/task_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2018-01-11 00:00:00"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_10"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/task_create_user"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_10"/>
                <TextView
                    android:id="@+id/create_user"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="张三"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_10"/>
                <TextView
                    android:id="@+id/task_do_user_info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/task_do_user"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_10"
                    android:layout_marginLeft="@dimen/distance_10"/>
                <TextView
                    android:id="@+id/take_do_user"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="张三"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_10"/>

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@mipmap/button_cz"
            android:text="@string/button_cz"
            android:textSize="@dimen/distance_14"
            android:textColor="@color/white"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_1"
        android:background="@color/color_e7e7e7"></View>
</LinearLayout>