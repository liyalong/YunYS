<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/baseBackgroundColor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingVertical="@dimen/distance_8"
        android:paddingHorizontal="@dimen/distance_10"
        android:layout_marginBottom="@dimen/distance_10">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@mipmap/icon_back"/>
        <android.support.design.widget.TabLayout
            android:id="@+id/none_device_tablayout"
            android:layout_weight="1"
            android:layout_width="@dimen/distance_200"
            android:layout_height="@dimen/distance_40"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            app:tabGravity="center"
            app:tabMode="fixed"
            app:tabTextColor="@color/color_666"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            app:tabSelectedTextColor="@color/color_333"
            app:tabIndicatorColor="@color/color_tab_selected">

        </android.support.design.widget.TabLayout>
        <TextView
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/submit"
            android:textColor="@color/color_333"
            android:gravity="center"
            android:textSize="@dimen/distance_14"/>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/none_device_tasks_viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>


</LinearLayout>