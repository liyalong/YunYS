<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/baseBackgroundColor"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/distance_49"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_back"
            android:layout_gravity="center_vertical" />
        <TextView
            android:id="@+id/project_detail_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/project"
            android:textColor="@color/color_333"
            android:gravity="center"
            android:textSize="@dimen/distance_16"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_back"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"/>
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/detail_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_41"
        android:background="@color/white"
        android:layout_marginTop="@dimen/distance_10"
        app:tabGravity="center"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="@color/color_666"
        app:tabSelectedTextColor="@color/color_333"
        app:tabIndicatorColor="@color/color_tab_selected"
        android:layout_marginBottom="@dimen/distance_10">

    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/project_detail_viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>