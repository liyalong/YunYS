<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:orientation="vertical">
    <ImageView
        android:layout_width="@dimen/distance_110"
        android:layout_height="@dimen/distance_95"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/distance_15"
        android:layout_marginTop="@dimen/distance_15"
        android:src="@mipmap/login_logo" />
    <LinearLayout
        style="@style/login_linearLayout_style">
        <ImageView
            style="@style/login_icon_style"
            android:background="@mipmap/icon_company_name"/>
        <EditText
            android:id="@+id/company_name"
            style="@style/LoginInputother"
            android:hint="@string/company_name"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/login_linearLayout_style">
        <ImageView
            style="@style/login_icon_style"
            android:background="@mipmap/icon_user_name"/>
        <EditText
            android:id="@+id/company_lianxi_name"
            style="@style/LoginInput"
            android:hint="请输入企业联系人"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/login_linearLayout_style">
        <ImageView
            style="@style/login_icon_style"
            android:background="@mipmap/login_icon_phone"/>
        <EditText
            android:id="@+id/phone_num"
            style="@style/LoginInput"
            android:hint="请输入企业联系电话"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/login_linearLayout_style">
        <ImageView
            style="@style/login_icon_style"
            android:background="@mipmap/login_icon_password"/>
        <EditText
            android:id="@+id/ed_company_email"
            style="@style/LoginInputother"
            android:hint="请输入企业邮箱"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/login_linearLayout_style"
        android:orientation="horizontal">
        <ImageView
            style="@style/login_icon_style"
            android:background="@mipmap/icon_message"/>
        <EditText
            android:id="@+id/ed_company_description"
            style="@style/LoginInputother"
            android:hint="请输入企业需求"
            android:layout_width="match_parent"
            android:layout_weight="2"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_address"
        style="@style/login_linearLayout_style"
        android:orientation="horizontal">
        <ImageView
            style="@style/login_icon_style"
            android:background="@mipmap/icon_message"/>
        <TextView
            android:id="@+id/ed_company_address"
            style="@style/LoginInput"
            android:text="请选择企业省市"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:layout_weight="2"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        style="@style/LoginInput.Button"
        android:text="@string/zhuce"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/xy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/xy" />
        <TextView
            android:id="@+id/toLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_main"
            android:textColor="@color/white"
            android:text="@string/tologin"
            />
    </LinearLayout>
</LinearLayout>