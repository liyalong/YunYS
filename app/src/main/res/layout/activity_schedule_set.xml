<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f4f4f4"
    tools:context="com.yunyisheng.app.yunys.schedule.activity.ScheduleSetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/include_titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_48"
            android:layout_marginTop="@dimen/distance_10"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/distance_10"
                android:text="@string/isshowchexiao"
                android:textColor="@color/color_333"
                android:textSize="@dimen/distance_14" />

            <CheckBox
                android:id="@+id/cb_isshowchexiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:button="@null"
                android:background="@drawable/btn_schedule_set_select"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/distance_10"
                android:checked="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_48"
            android:layout_marginTop="@dimen/distance_1"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/distance_10"
                android:text="@string/isshowwancheng"
                android:textColor="@color/color_333"
                android:textSize="@dimen/distance_14" />

            <CheckBox
                android:id="@+id/cb_isshowwancheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@null"
                android:background="@drawable/btn_schedule_set_select"
                android:layout_marginRight="@dimen/distance_10"
                android:checked="true"
                 />
        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
