<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_8" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginRight="@dimen/distance_25"
            android:background="@color/color_e7" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_41">

            <ImageView
                android:id="@+id/img_zhedie"
                android:layout_width="@dimen/distance_15"
                android:layout_height="@dimen/distance_15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/distance_12" />

            <TextView
                android:id="@+id/te_groupname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/distance_3"
                android:layout_toRightOf="@+id/img_zhedie"
                android:textColor="@color/color_333"
                android:textSize="@dimen/distance_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/distance_25"
                android:background="@color/color_e7" />
        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>