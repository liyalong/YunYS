<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/distance_95"
    android:background="@color/white"
    android:paddingBottom="@dimen/distance_5"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/distance_5"
        android:layout_marginRight="@dimen/distance_10"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/te_project_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333"
                android:singleLine="true"
                android:maxLength="18"
                android:textSize="@dimen/distance_14" />

            <TextView
                android:id="@+id/te_project_type"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/distance_14"
                android:layout_marginLeft="@dimen/distance_2"
                android:layout_marginTop="@dimen/distance_2"
                android:layout_toRightOf="@+id/te_project_title"
                android:background="@mipmap/liuchengbac"
                android:gravity="center"
                android:paddingLeft="@dimen/distance_3"
                android:paddingRight="@dimen/distance_3"
                android:textColor="@color/white"
                android:textSize="@dimen/distance_8" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/te_project_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_2"
                android:textColor="@color/color_999"
                android:textSize="@dimen/distance_11" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/te_project_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:textColor="@color/color_666"
                android:textSize="@dimen/distance_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/te_zhixing_peo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:textColor="@color/color_999"
                android:textSize="@dimen/distance_12" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>