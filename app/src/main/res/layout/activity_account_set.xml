<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f4f4f4"
    tools:context="com.yunyisheng.app.yunys.userset.activity.AccountSetActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/include_titlebar"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_marginTop="@dimen/distance_10"
            android:layout_height="@dimen/distance_50">
            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/distance_10"
                android:layout_centerVertical="true"
                android:background="@mipmap/password"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/ed_phonenum"
                android:layout_width="match_parent"
                android:background="@null"
                android:textSize="@dimen/distance_14"
                android:textColor="@color/color_333"
                android:hint="@string/putphonenum"
                android:inputType="number"
                android:textColorHint="@color/color_999"
                android:layout_toRightOf="@+id/img"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_1"
            android:background="@color/color_e7"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="@dimen/distance_50">
            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/distance_10"
                android:layout_centerVertical="true"
                android:background="@mipmap/yanzhengma"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/ed_yanzhengnum"
                android:layout_width="match_parent"
                android:background="@null"
                android:textSize="@dimen/distance_14"
                android:textColor="@color/color_333"
                android:hint="@string/getyanzheng"
                android:inputType="number"
                android:textColorHint="@color/color_999"
                android:layout_toRightOf="@+id/img2"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/get_yzm"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:background="@drawable/yzm_bg"
                android:text="@string/get_yzm"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_queren"
            android:layout_width="@dimen/distance_341"
            android:layout_gravity="center"
            android:background="@drawable/btn_anpai_work"
            android:layout_marginTop="@dimen/distance_20"
            android:text="@string/queren"
            android:textColor="@color/white"
            android:textSize="@dimen/distance_14"
            android:layout_height="@dimen/distance_40" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
