<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="@dimen/distance_250"
            android:layout_height="@dimen/distance_100"
            android:layout_centerInParent="true"
            android:background="@drawable/dialog_radio_5dp">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_60">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/distance_10"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/outlogin"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/distance_15" />
            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_1"
                android:layout_below="@+id/rl"
                android:background="@color/color_e7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/view"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_cancle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="取消"
                        android:textColor="@color/color_46a"
                        android:textSize="@dimen/distance_14" />
                </RelativeLayout>

                <View
                    android:layout_width="@dimen/distance_1"
                    android:layout_height="match_parent"
                    android:background="@color/color_e7" />

                <RelativeLayout
                    android:id="@+id/rl_ok"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="确定"
                        android:textColor="@color/color_46a"
                        android:textSize="@dimen/distance_14" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>