<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yunyisheng.app.yunys.main.activity.AddMemorandumActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_49"
            android:background="@color/white">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/blackback" />

            <TextView
                android:id="@+id/te_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/beiwanglu"
                android:textColor="@color/color_333"
                android:textSize="@dimen/distance_16" />

            <TextView
                android:id="@+id/te_addok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/distance_10"
                android:text="@string/addok"
                android:textColor="@color/color_666"
                android:textSize="@dimen/distance_14"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_1"
            android:background="@color/color_e7" />

        <EditText
            android:id="@+id/ed_memorandum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/distance_16"
            android:textColor="@color/color_666"
            android:layout_margin="@dimen/distance_12"
            android:background="@null" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
