<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yunyisheng.app.yunys.project.activity.AlarmDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_e7e7e7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_49"
            android:background="@drawable/linearlayout_bottom_line">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/alarm_detail"
                android:textColor="@color/color_333" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_back"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_42"
            android:layout_marginTop="@dimen/distance_10"
            android:background="@drawable/linearlayout_bottom_line"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/distance_10"
                android:layout_marginRight="@dimen/distance_5"
                android:gravity="center"
                android:src="@mipmap/icon_project_list_title_left" />

            <TextView
                android:id="@+id/include_title_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/alarm_detail_jbxx"
                android:textColor="@color/color_333"
                android:textSize="@dimen/distance_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linearlayout_bottom_line"
            android:orientation="vertical"
            android:padding="@dimen/distance_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/warning_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/distance_14" />

                <TextView
                    android:id="@+id/warning_leveal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/distance_8"
                    android:background="@color/alarmrules_level_1"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/distance_8"
                    android:paddingVertical="@dimen/distance_2"
                    android:text="@string/alarm_rules_level_1"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/distance_8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/distance_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/alarm_history_project"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_12" />

                <TextView
                    android:id="@+id/alarm_history_project"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/distance_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/alarm_history_type"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_12" />

                <TextView
                    android:id="@+id/alarm_history_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/alarm_history_type_1"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/distance_20"
                    android:text="@string/alarmrules_status"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_12" />

                <TextView
                    android:id="@+id/alarm_status"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/distance_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alarm_history_time"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_12" />

                <TextView
                    android:id="@+id/alarm_history_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_12" />

                <TextView
                    android:id="@+id/alarm_update_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/distance_20"
                    android:text="@string/alarmrules_update_time"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_12" />

                <TextView
                    android:id="@+id/alarm_update_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/distance_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alarmrules_desc"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_12" />

                <TextView
                    android:id="@+id/alarm_history_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_12" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_42"
            android:layout_marginTop="@dimen/distance_10"
            android:background="@drawable/linearlayout_bottom_line"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/distance_10"
                android:layout_marginRight="@dimen/distance_5"
                android:gravity="center"
                android:src="@mipmap/icon_project_list_title_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/alarm_detail_plc"
                android:textColor="@color/color_333"
                android:textSize="@dimen/distance_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            tools:ignore="WebViewLayout">

            <WebView
                android:id="@+id/chart_web"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            </WebView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/no_chart_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/linearlayout_bottom_line"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="暂无图表数据"
                android:textColor="@color/color_333" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
