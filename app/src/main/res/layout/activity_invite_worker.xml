<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.yunyisheng.app.yunys.main.activity.InviteWorkerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_171"
            android:background="@mipmap/invitebac">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:background="@mipmap/whiteback"
                android:layout_marginTop="@dimen/distance_13"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/distance_20"
                android:text="@string/invite"
                android:textColor="@color/white"
                android:textSize="@dimen/distance_16" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="@dimen/distance_290"
                    android:layout_height="@dimen/distance_40"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/distance_14"
                    android:background="@drawable/invite_bac"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/distance_3"
                        android:background="@mipmap/usernameimg" />

                    <EditText
                        android:id="@+id/ed_username"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="@string/username"
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="@dimen/distance_14" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="@dimen/distance_290"
                    android:layout_height="@dimen/distance_40"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/distance_10"
                    android:background="@drawable/invite_bac"
                    >

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/distance_3"
                        android:background="@mipmap/seximg" />

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/img2"
                        android:text="@string/sex"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/distance_14" />

                    <Spinner
                        android:id="@+id/sp_sex"
                        android:layout_toRightOf="@+id/text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/distance_1"
                        android:spinnerMode="dropdown"
                        android:background="@null"
                        android:dropDownVerticalOffset="@dimen/distance_40"
                         />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/zhankai"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/distance_10"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="@dimen/distance_290"
                    android:layout_height="@dimen/distance_40"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/distance_14"
                    android:background="@drawable/invite_bac"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/distance_3"
                        android:background="@mipmap/up_phonenum" />

                    <EditText
                        android:id="@+id/ed_phonenum"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="@string/phone"
                        android:inputType="number"
                        android:maxLength="11"
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="@dimen/distance_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/distance_290"
                    android:layout_height="@dimen/distance_40"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/distance_14"
                    android:background="@drawable/invite_bac"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/distance_3"
                        android:background="@mipmap/emailimg" />

                    <EditText
                        android:id="@+id/ed_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="@string/eamil"
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="@dimen/distance_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/distance_290"
                    android:layout_height="@dimen/distance_40"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/distance_14"
                    android:background="@drawable/invite_bac"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/distance_3"
                        android:background="@mipmap/workernum" />

                    <EditText
                        android:id="@+id/ed_workernum"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="@string/workernum"
                        android:inputType="number"
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="@dimen/distance_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/distance_290"
                    android:layout_height="@dimen/distance_40"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/distance_14"
                    android:background="@drawable/invite_bac"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/distance_3"
                        android:background="@mipmap/zhiwei" />

                    <EditText
                        android:id="@+id/ed_zhiwei"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="@string/zhiwei"
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="@dimen/distance_14" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_select_bumen"
                    android:layout_width="@dimen/distance_290"
                    android:layout_height="@dimen/distance_40"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/distance_14"
                    android:background="@drawable/invite_bac">

                    <ImageView
                        android:id="@+id/img7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/distance_3"
                        android:background="@mipmap/bumen" />

                    <TextView
                        android:id="@+id/te_bumen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/img7"
                        android:text="@string/bumen"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/distance_14" />

                    <ImageView
                        android:id="@+id/img8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/blackback_r" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_role"
                    android:layout_width="@dimen/distance_290"
                    android:layout_height="@dimen/distance_40"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/distance_14"
                    android:background="@drawable/invite_bac">

                    <ImageView
                        android:id="@+id/img9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/distance_3"
                        android:background="@mipmap/roleimg" />

                    <TextView
                        android:id="@+id/te_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/img9"
                        android:text="@string/jiaose"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/distance_14" />

                    <ImageView
                        android:id="@+id/img10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/blackback_r" />
                </RelativeLayout>

                <Button
                    android:id="@+id/btn_queren"
                    android:layout_width="@dimen/distance_290"
                    android:layout_height="@dimen/distance_40"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/distance_10"
                    android:background="@drawable/btn_anpai_work"
                    android:text="@string/queren"
                    android:layout_marginBottom="@dimen/distance_20"
                    android:textColor="@color/white"
                    android:textSize="@dimen/distance_14" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
