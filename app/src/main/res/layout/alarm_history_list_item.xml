<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@drawable/linearlayout_bottom_line"
    android:paddingHorizontal="@dimen/distance_10"
    android:orientation="vertical"
    android:paddingVertical="@dimen/distance_5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/beijian_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报警名称 bbbbb"
            android:textColor="@color/color_333"
            android:textSize="@dimen/distance_14"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/alarmrules_level_1"
            android:textColor="@color/white"
            android:background="@color/alarmrules_level_1"
            android:layout_marginLeft="@dimen/distance_8"
            android:textSize="@dimen/distance_8"
            android:gravity="center"
            android:paddingVertical="@dimen/distance_2"
            android:paddingHorizontal="@dimen/distance_8"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alarm_history_time"
            android:textColor="@color/color_666"
            android:textSize="@dimen/distance_12"
            />
        <TextView
            android:id="@+id/alarm_history_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2018-01-11 00:00:00"
            android:textColor="@color/color_666"
            android:textSize="@dimen/distance_12"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/alarm_history_type"
            android:textColor="@color/color_666"
            android:textSize="@dimen/distance_12"
            />
        <TextView
            android:id="@+id/alarm_history_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="设备报警"
            android:textColor="@color/color_666"
            android:textSize="@dimen/distance_12"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alarmrules_desc"
            android:textColor="@color/color_666"
            android:textSize="@dimen/distance_12"
            />
        <TextView
            android:id="@+id/alarm_history_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="指标超过阈值"
            android:textColor="@color/color_666"
            android:textSize="@dimen/distance_12"
            />
    </LinearLayout>
</LinearLayout>
