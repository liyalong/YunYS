<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="@dimen/distance_71"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/distance_10"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_71"
        android:orientation="horizontal"
        android:background="@drawable/linearlayout_bottom_line">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_10">
                <TextView
                    android:id="@+id/device_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333"
                    android:gravity="center"
                    android:textSize="@dimen/distance_14"/>
                <TextView
                    android:id="@+id/device_status"
                    android:layout_width="@dimen/distance_30"
                    android:layout_height="@dimen/distance_14"
                    android:background="@color/device_status_success"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/device_status_1"
                    android:textSize="@dimen/distance_8"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/distance_10"/>
                <LinearLayout
                    android:id="@+id/device_warning_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FF703A"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/distance_10"
                    android:paddingHorizontal="@dimen/distance_3">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/icon_project_list_errors"
                        android:layout_gravity="center"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/addTime"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_10"/>
                <TextView
                    android:id="@+id/device_create_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_10"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/item_button"
            android:layout_width="@dimen/distance_71"
            android:layout_height="@dimen/distance_31"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@mipmap/button_cz"
            android:text="@string/button_cz"
            android:textSize="@dimen/distance_14"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>