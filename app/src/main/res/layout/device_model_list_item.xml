<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="@dimen/distance_84"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/distance_10"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_84"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/distance_8"
        android:background="@drawable/linearlayout_bottom_line">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingVertical="@dimen/distance_5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/model_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="水解系统"
                    android:textColor="@color/color_333"
                    android:gravity="center"
                    android:textSize="@dimen/distance_14"/>
                <TextView
                    android:id="@+id/model_run_status"
                    android:layout_width="@dimen/distance_30"
                    android:layout_height="@dimen/distance_14"
                    android:background="@color/device_status_success"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/device_status_success"
                    android:paddingHorizontal="@dimen/distance_2"
                    android:textSize="@dimen/distance_8"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/distance_10"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/distance_5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/device_nums"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_12"/>
                <TextView
                    android:id="@+id/model_bind_device_nums"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_12"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/model_status"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_10"/>
                <TextView
                    android:id="@+id/model_used_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enable"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_10"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_right"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_1"
        android:background="@color/color_e7e7e7"></View>
</LinearLayout>