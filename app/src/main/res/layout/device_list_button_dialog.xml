<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_1"
        android:background="@color/color_e7e7e7"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_100"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/distance_10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/to_alarm_rules"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/alarm_rules"
                android:drawableTop="@mipmap/alarm_rules"
                android:gravity="center"
                android:textColor="@color/color_333"
                android:textSize="@dimen/distance_14"
                />
            <TextView
                android:id="@+id/to_knowledge"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/knowledge"
                android:drawableTop="@mipmap/knowledge"
                android:gravity="center"
                android:textColor="@color/color_333"
                android:textSize="@dimen/distance_14"
                />
            <TextView
                android:id="@+id/to_device_parts"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/device_parts"
                android:drawableTop="@mipmap/device_parts"
                android:gravity="center"
                android:textColor="@color/color_333"
                android:textSize="@dimen/distance_14"
                />
            <TextView
                android:id="@+id/to_periodic_tasks"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/periodic_tasks"
                android:textSize="@dimen/distance_14"
                android:drawableTop="@mipmap/periodic_tasks"
                android:gravity="center"
                android:textColor="@color/color_333"
                />
            <TextView
                android:id="@+id/to_create_task"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/create_task"
                android:textSize="@dimen/distance_14"
                android:drawableTop="@mipmap/icon_add_task"
                android:gravity="center"
                android:textColor="@color/color_333"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_1"
        android:background="@color/color_e7e7e7"/>
    <ImageView
        android:id="@+id/btn_cz_close"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_45"
        android:src="@mipmap/icon_bottom_close"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>