<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="@dimen/distance_280"
        android:background="@drawable/dialog_radio_5dp"
        android:layout_height="@dimen/distance_120">
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入反馈意见"
            android:textSize="@dimen/distance_15"
            android:textColor="@color/color_333"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/distance_10"
            />
        <EditText
            android:id="@+id/ed_putstr"
            android:layout_width="match_parent"
            android:layout_below="@+id/text"
            android:hint="请输入"
            android:textColorHint="@color/color_666"
            android:textSize="@dimen/distance_13"
            android:layout_marginLeft="@dimen/distance_10"
            android:layout_marginRight="@dimen/distance_10"
            android:layout_marginTop="@dimen/distance_15"
            android:background="@null"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_1"
            android:background="@color/color_e7"
            android:layout_below="@+id/ed_putstr"
            android:layout_marginTop="@dimen/distance_10"
            />
        <LinearLayout
            android:layout_below="@+id/view"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_cancle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消"
                    android:textSize="@dimen/distance_14"
                    android:layout_centerInParent="true"
                    android:textColor="@color/color_46a"
                    />
            </RelativeLayout>
            <View
                android:layout_width="@dimen/distance_1"
                android:layout_height="match_parent"
                android:background="@color/color_e7"
                />
            <RelativeLayout
                android:id="@+id/rl_ok"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确定"
                    android:textSize="@dimen/distance_14"
                    android:layout_centerInParent="true"
                    android:textColor="@color/color_46a"
                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>