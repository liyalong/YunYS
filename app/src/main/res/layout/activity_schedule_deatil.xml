<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f4f4f4"
    tools:context="com.yunyisheng.app.yunys.schedule.activity.ScheduleDeatilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/include_titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_10"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/distance_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/distance_14"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/distance_5"
                    android:background="@mipmap/titlehead" />

                <TextView
                    android:id="@+id/te_columntitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/img"
                    android:text="我的日程"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/distance_16" />

                <TextView
                    android:id="@+id/te_columnsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/distance_5"
                    android:layout_toRightOf="@+id/te_columntitle"
                    android:text="(32)"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/distance_16" />
            </RelativeLayout>

            <TextView
                android:id="@+id/te_schedule_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_2"
                android:textColor="@color/color_999"
                android:textSize="@dimen/distance_11" />

            <TextView
                android:id="@+id/te_schedule_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/distance_3"
                android:singleLine="true"
                android:textColor="@color/color_666"
                android:textSize="@dimen/distance_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_10"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/distance_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zhixing"
                android:textColor="@color/color_333"
                android:textSize="@dimen/distance_14" />

            <TextView
                android:id="@+id/te_zhixing_peo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/distance_3"
                android:singleLine="true"
                android:textColor="@color/color_999"
                android:textSize="@dimen/distance_12" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
