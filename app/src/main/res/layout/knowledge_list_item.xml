<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="@dimen/distance_55"
    android:layout_width="match_parent"
    android:background="@drawable/linearlayout_bottom_line"
    android:paddingHorizontal="@dimen/distance_10"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/distance_1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_49"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/knowledge_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_30"
            android:text="知识名称bbbbb"
            android:gravity="center|left"
            android:textColor="@color/color_333"
            android:textSize="@dimen/distance_14"
            />
        <TextView
            android:id="@+id/knowledge_create_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2018-01-11 00:00:00"
            android:textColor="@color/color_666"
            android:textSize="@dimen/distance_12"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/icon_right"/>
</LinearLayout>
