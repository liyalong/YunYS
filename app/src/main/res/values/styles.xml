<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/transparent</item>
        <item name="android:windowEnterAnimation">@anim/anim_show</item>
        <item name="android:windowExitAnimation">@anim/anim_hide</item>
    </style>

    <style name="bottom_bar_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textColor">@drawable/bar_text_change</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- 登录界面 -->
    <style name="login_linearLayout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_linearlayout_radios</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
    <style name="login_icon_style">
        <item name="android:layout_width">@dimen/distance_35</item>
        <item name="android:layout_height">@dimen/distance_35</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="LoginInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">#00000000</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/color_333</item>
        <item name="android:textSize">@dimen/text_main</item>
        <item name="android:layout_marginLeft">-15dp</item>
    </style>
    <style name="LoginInput.Button">
        <item name="android:layout_marginLeft">@dimen/distance_35</item>
        <item name="android:layout_marginRight">@dimen/distance_35</item>
        <item name="android:padding">@dimen/distance_10</item>
        <item name="android:textColor">@color/color_login_button</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/login_linearlayout_button_radios</item>
    </style>
    <style name="weekIndicatorStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:textColor">#ff25adff</item>
    </style>
    <!-- 我的页面布局 -->
    <style name="lineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:color">@color/color_bbb</item>
    </style>
    <style name="myFargmentLinearStyle">
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#fff</item>
        <item name="android:textColor">@color/color_333</item>
    </style>
    <style name="myFargmentTextStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/color_555</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/distance_30</item>
    </style>
    <style name="myFargmentImageArrow">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/color_555</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginRight">@dimen/distance_30</item>
    </style>
    <!-- 我的页面布局 -->
    <!-- 项目页面布局 -->
    <style name="projectListStyle">
        <item name="android:background">@color/baseBackgroundColor</item>
    </style>

    <!-- 对话框样式 -->
    <style name="dialog_bottom_full" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
    </style>
</resources>
